.noticias{"data-magellan-destination" => "noticias"}
  .row
    .large-6.columns.large-centered.panel
      - if @noticia
        %h4 A Sair
        - @noticia.each do |post|
          %h6= link_to post.content, posts_path
          %p Posted #{time_ago_in_words(post.created_at)} ago.
          %hr
          .fb-like{"data-font" => "segoe ui", "data-href" => "#{post_path(post)}", "data-layout" => "box_count", "data-send" => "false", "data-show-faces" => "false", "data-width" => "60"}