#noticias.noticias{"data-magellan-destination" => "noticias"}
  .row
    .large-6.columns.large-centered.panel
      - if @noticia
        %h4.futura.uppercase.center
          A Sair
          - if current_admin
            %small
              = link_to "Edit", posts_path, class: "radius label secondary"
        %hr
        - @noticia.each do |post|
          %h6.typewriter
            %span.uppercase= post.title
            %small #{time_ago_in_words(post.created_at)} ago
          %p.times= raw(post.content)
        - if current_admin
          %small
            = link_to "+ Adicionar nova", new_post_path, class: "radius label success"
