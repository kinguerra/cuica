.header
  .row
    .small-12.columns.logo.center
      = link_to image_tag('cuica_logo.png'), root_path
  .row
    .large-7.columns.panel
      %p Documentário sobra a vida e a obra do poeta popular, trovador-repórter e propagandista Cuíca de Santo Amaro, personagem baiano, controverso e irreverente.
    .large-1.columns.panel.small-4.small-offset-1.center
      = link_to "Trailer", "#"
    .large-2.columns.panel.small-4.center
      = link_to "Exibição", "#", "data-reveal-id" => "exibir"
    .large-1.columns.small-3
      .fb-like{"data-href" => "https://www.facebook.com/cuicadesantoamaro", "data-layout" => "box_count", "data-send" => "false", "data-show-faces" => "false", "data-width" => "450"}


#exibir.reveal-modal.r1
  .row
    .large-12.columns
      - if @exibition
        %h4 Próximas Exibições
        - @exibition.each do |cinema|
          %span= cinema.place
          %p= cinema.date.strftime("%d %B %Y às %H:%M")
  %a.close-reveal-modal ×
