.row
  .small-12.columns
    .row
      .small-2.columns
        %h1.subheader Notícias
      .small-10.columns
        - if current_admin
          %h1.subheader.button.tiny.secondary= link_to "Criar nova notícia.", new_post_path
    - @posts.each do |post|
      %h4= post.title
      %p= post.content
      .timestamp
        Posted #{time_ago_in_words(post.created_at)} ago.
      - if current_admin
        %p= link_to 'Show', post
        %p= link_to 'Edit', edit_post_path(post)
        %p= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }