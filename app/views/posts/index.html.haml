.row
  .small-12.columns
    .row
      .small-2.columns
        %h1.subheader Not√≠cias
    - @posts.each do |post|
      %h5= post.title
      %small.timestamp
        Posted #{time_ago_in_words(post.created_at)} ago.
      %p= post.content
      - if current_admin
        %p
          = link_to 'Visualizar', post
          = link_to 'Editar', edit_post_path(post)
          = link_to 'Deletar', post, method: :delete, data: { confirm: 'Are you sure?' }